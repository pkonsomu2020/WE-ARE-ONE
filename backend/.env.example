# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Server Configuration
NODE_ENV=production
PORT=10000

# Frontend URL (for CORS)
FRONTEND_URL=https://weareone.co.ke

# MySQL Database Configuration (cPanel)
DB_HOST=your_cpanel_mysql_host
DB_PORT=3306
DB_NAME=weareone_donation_app
DB_USER=your_mysql_username
DB_PASSWORD=your_mysql_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# Email Configuration (Resend service)
RESEND_API_KEY=your_resend_api_key

# Legacy Email Configuration (for notifications) - DEPRECATED
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com

# Payd Configuration
PAYD_USERNAME=your_payd_username
PAYD_PASSWORD=your_payd_password
PAYD_MODE=live

# Ollama Configuration (optional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# Admin Configuration
ADMIN_API_KEY=your_admin_api_key
ADMIN_DEFAULT_EMAIL=admin@weareone.co.ke
ADMIN_DEFAULT_PASSWORD=your_admin_password
ADMIN_DEFAULT_NAME=WAO Admin

# Events Configuration
EVENTS_ADMIN_EMAIL=events@weareone.co.ke